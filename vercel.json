{
  "buildCommand": "echo 'No build required'",
  "outputDirectory": ".",
  "functions": {
    "api/generate-prompts.js": {
      "maxDuration": 30,
      "memory": 1024
    },
    "api/generate-images.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/*.js": {
      "includeFiles": "node_modules/@google/generative-ai/**"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}